<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.duokr.goquicklearn"
    android:versionCode="9"
    android:versionName="2.4" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="net.duokr.goquicklearn.activity.CourseListMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.duokr.goquicklearn.activity.ContentViewActivity"
            android:label="@string/activity_content_view_title"
            android:parentActivityName="net.duokr.goquicklearn.activity.CourseListMainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.duokr.goquicklearn.activity.CourseListMainActivity" />
        </activity>
        <activity
            android:name="net.duokr.goquicklearn.activity.AboutActivity"
            android:label="@string/activity_about_title"
            android:parentActivityName="net.duokr.goquicklearn.activity.CourseListMainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.duokr.goquicklearn.activity.CourseListMainActivity" />
        </activity>
        <activity
            android:name="net.duokr.goquicklearn.activity.MyProfileActivity"
            android:label="@string/my_profile"
            android:parentActivityName="net.duokr.goquicklearn.activity.CourseListMainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.duokr.goquicklearn.activity.CourseListMainActivity" />
        </activity>
       
    </application>

</manifest>